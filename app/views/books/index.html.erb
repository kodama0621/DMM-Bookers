<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>
      <% @book.each do |book| %>
        <p>Title</p>
        <span><%= book.title %></span>
      <% end %>
      </th>

      <th>
        <% @book.each do |book| %>
        <p>Body</p>
        <span><%= book.body %></span>
      <% end %>
      </th>

      <th colspan="3">
        <% @book.each do |book| %>
        <%= link_to "Show", book_path(@book.id) %>
        <%= link_to "Edit", edit_book_path(@book.id) %>
        <% end %>
      </th>
    </tr>
  </thead>
</table>
