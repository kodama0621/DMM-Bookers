<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
      <%= link_to "Show", book_path(book), class: "show_#{book.id}" %>
      <%= link_to "Edit", edit_book_path(book), class: "edit_#{book.id}" %>
      <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<h3>New book</h3>

<% if flash.now[:error] %>
  <p><%= flash.now[:error] %></p>
<% end %>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Create Book' %></br>

<% end %>

