<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>
      <% @book.each do |book| %>
        <p>Title</p>
        <span><%= book.title %></span>
      <% end %>
      </th>

      <th>
        <% @book.each do |book| %>
        <p>Body</p>
        <span><%= book.body %></span>
      <% end %>
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

<h2>New book</h2>